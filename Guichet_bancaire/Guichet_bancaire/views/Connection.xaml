<Page x:Class="Guichet_bancaire.views.Connection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Guichet_bancaire.views"
      mc:Ignorable="d" 
      d:DesignHeight="360" d:DesignWidth="800" FontFamily="arial"
      Title="Connection">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Text="Email:" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="25"/>
        <TextBox x:Name="txtEmail" Grid.Column="1" Margin="10"/>

        <TextBlock Text="Mot de passe:" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="25"/>
        <TextBox x:Name="txtMDP" Grid.Column="1" Grid.Row="1" Margin="10"/>

        <Button x:Name="btnConnexion" Content="Connexion" Grid.Row="2" Grid.ColumnSpan="2" Margin="100,10,100,10" FontSize="25"/>
    </Grid>
</Page>