<Page x:Class="Guichet_bancaire.views.Operation"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Guichet_bancaire.views"
      mc:Ignorable="d" 
      d:DesignHeight="360" d:DesignWidth="800" FontFamily="arial"
      Title="Operation">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button x:Name="btnProfil" Content="Profil" Grid.Column="1" HorizontalAlignment="Right" Width="75" Height="50" Margin="0,0,10,20" FontSize="20"/>
        <TextBlock Text="Virement" Grid.Row="1" FontSize="30"/>
        <TextBlock Text="Valeur de la transaction" Grid.Row="1" VerticalAlignment="Center" FontSize="20"/>
        <TextBox x:Name="txtVirement" Grid.Row="1" Grid.Column="1" Margin="20"/>
    </Grid>
</Page>
